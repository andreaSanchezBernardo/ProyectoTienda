
@model List<CapaEntidad.Producto>
@{
    ViewBag.Title = "PaginaCategoria";
    Layout = "~/Views/Shared/_Layout_tienda.cshtml";
}

<h2 class="viv">@ViewBag.NombreCategoria</h2>

<div class="contendor">
    <div class="cont1">
        @foreach (var producto in Model)
        {
            <div class="cositas">
                <p id="IdProducto" hidden>@producto.IdProducto</p>
                <p>@producto.Nombre</p>
                <img class="i1" src='@producto.RutaImagen' />
