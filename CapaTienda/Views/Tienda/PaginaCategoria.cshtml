                    <summary>Descripción</summary>
                    <p id="descripcion">@producto.Descripcion</p>
                </details>
                <p>@producto.Precio€</p>
                <div class="bf">
                    <button onclick="">deseos</button>
                    <button><img src="" />cesta</button>
                </div>
            </div>
        }
    </div>
</div>